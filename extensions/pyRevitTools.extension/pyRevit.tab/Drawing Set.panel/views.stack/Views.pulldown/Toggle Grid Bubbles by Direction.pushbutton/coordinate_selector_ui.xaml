<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="White"
    Title="Grid Bubble Setup"
    MinHeight="400"
    MinWidth="380"
    SizeToContent="Height"
    Width="420"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    ScrollViewer.VerticalScrollBarVisibility="Disabled"
    BorderBrush="#FFA0A0A0"
    BorderThickness="1,1,1,1"
    MouseLeftButtonDown="move_window"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#FF667EEA">
            <TextBlock Text="Grid Bubble Setup" FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,15,0,15"
                       Foreground="White" VerticalAlignment="Center"/>
            <Button Content="X" Click="cancel" Background="Transparent" FontSize="14"
                    FontWeight="Bold" Width="30" Height="30" HorizontalAlignment="Right"
                    VerticalAlignment="Center" Margin="0,0,10,0" BorderBrush="White"
                    Foreground="White" BorderThickness="1"/>
        </Grid>

        <!-- Subtitle -->
        <TextBlock Grid.Row="1" Text="Configure coordinate system and angle tolerance"
                   FontSize="12" HorizontalAlignment="Center" Margin="0,10,0,10"
                   Foreground="#FF666666"/>

        <!-- Coordinate System Selection -->
        <GroupBox Grid.Row="2" Header="Coordinate System" Margin="15,5,15,15"
                  FontWeight="SemiBold" Foreground="#FF444444">
            <StackPanel Margin="15,5,15,0">
                <RadioButton x:Name="all_grids" GroupName="CoordSystem" Content="All grids"
                             Margin="0,8,0,5" FontWeight="Normal" FontSize="12"/>
                <TextBlock Text="Toggles all grids in the active view"
                           FontSize="10" Foreground="#FF666666" Margin="20,0,0,8"/>

                <RadioButton x:Name="radio_true_north" GroupName="CoordSystem" Content="True North"
                             Margin="0,5,0,5" FontWeight="Normal" FontSize="12"/>
                <TextBlock Text="Uses true north orientation"
                           FontSize="10" Foreground="#FF666666" Margin="20,0,0,8"/>

                <RadioButton x:Name="radio_project_north" GroupName="CoordSystem" Content="Project North"
                             Margin="0,8,0,5" FontWeight="Normal" FontSize="12"/>
                <TextBlock Text="Uses project coordinate system (applies the 'Angle to True North')"
                           FontSize="10" Foreground="#FF666666" Margin="20,0,0,8"/>

                <RadioButton x:Name="radio_view_orientation" GroupName="CoordSystem" Content="View/Scope Box Orientation"
                             Margin="0,5,0,5" FontWeight="Normal" FontSize="12"/>
                <TextBlock Text="Uses current view orientation and scope boxes"
                           FontSize="10" Foreground="#FF666666" Margin="20,0,0,8"/>
            </StackPanel>
        </GroupBox>

        <!-- Angle Tolerance -->
        <GroupBox Grid.Row="3" Header="Angle Tolerance" Margin="15,5,15,15"
                  FontWeight="SemiBold" Foreground="#FF444444">
            <StackPanel Margin="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Slider x:Name="angle_slider" Grid.Column="0" Minimum="1" Maximum="40"
                            Value="10" TickFrequency="1" IsSnapToTickEnabled="True"
                            Margin="0,8,15,8" ValueChanged="angle_slider_changed"/>

                    <TextBlock x:Name="angle_display" Grid.Column="1" Text="10°"
                               FontSize="18" FontWeight="Bold" Foreground="#FF667EEA"
                               VerticalAlignment="Center" MinWidth="50"/>
                </Grid>

                <Grid Margin="0,5,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="1° (Strict)" FontSize="10"
                               Foreground="#FF888888" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Column="1" Text="40° (Permissive)" FontSize="10"
                               Foreground="#FF888888" HorizontalAlignment="Right"/>
                </Grid>

                <TextBlock x:Name="angle_description" Text="Moderate - good for most cases"
                           FontSize="12" Foreground="#FF666666" HorizontalAlignment="Center"
                           Margin="0,5,0,10" FontStyle="Italic"/>

                <Border Background="#FFE3F2FD" BorderBrush="#FFBBDEFB" BorderThickness="1"
                        CornerRadius="5" Margin="0,5,0,0" Padding="12">
                    <StackPanel>
                        <TextBlock Text="How this works" FontSize="12" FontWeight="SemiBold"
                                   Foreground="#FF1976D2" Margin="0,0,0,5"/>
                        <TextBlock Text="Controls how closely grids must align with the chosen coordinate system. Lower values = only straight grids. Higher values = includes angled grids."
                                   FontSize="11" Foreground="#FF1565C0" TextWrapping="Wrap" LineHeight="16"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <Grid Grid.Row="4" Margin="15,10,15,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Cancel" Click="cancel"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center"
                    Height="40" Margin="0,0,10,0" Background="#FFF8F9FA"
                    BorderBrush="#FFDEE2E6" Foreground="#FF666666" FontSize="12"/>

            <Button Grid.Column="1" Content="Continue" Click="proceed"
                    HorizontalAlignment="Stretch" VerticalAlignment="Center"
                    Height="40" Margin="10,0,0,0" Background="#FF667EEA"
                    BorderBrush="#FF667EEA" Foreground="White" FontWeight="SemiBold" FontSize="12"/>
        </Grid>
    </Grid>
</Window>